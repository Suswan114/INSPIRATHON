<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6E9EB "
    tools:context=".NotSafeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/helpusfindu"
        android:backgroundTint="#CBF676FF"
        app:cardCornerRadius="30dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="100dp"
        app:cardElevation="0dp">
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Help Us find You"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/links"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/areYouAlone"
        android:backgroundTint="#CBF676FF"
        app:cardCornerRadius="30dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="100dp"
        app:cardElevation="0dp">
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Are You Alone"/>
    </androidx.cardview.widget.CardView>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/areYouAlone"
        tools:layout_editor_absoluteX="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
